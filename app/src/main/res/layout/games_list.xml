<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/games_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:text="Series"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/games_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:text="Status"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/games_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="40dp"
            android:background="@drawable/games_teams_background_top"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
                <ImageView
                    android:id="@+id/games_home_logo"
                    android:layout_marginVertical="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:weightSum="1">
                <TextView
                    android:id="@+id/games_home_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:layout_margin="5dp"
                    android:text=""
                    android:layout_weight=".5"/>
                <TextView
                    android:id="@+id/games_home_score"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:text=""
                    android:layout_weight=".5"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/games_teams_background_bottom"
            android:layoutDirection="rtl"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/games_away_logo"
                android:layout_marginVertical="5dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:weightSum="1">
                <TextView
                    android:id="@+id/games_away_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text=""
                    android:layout_weight=".5"/>
                <TextView
                    android:id="@+id/games_away_score"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:text=""
                    android:layout_weight=".5"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>